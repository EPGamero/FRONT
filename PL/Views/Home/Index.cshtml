@{
    ViewBag.Title = "Home Page";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<br />  
<div class="jumbotron">

    <div class="text-center">
        <h4>Datos del Cliente</h4>
    </div>

    <div class="container">
        <div class="col-md-6 mx-auto text-center">
            <div class="header-title">
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="caption ">
                    <form>
                        <div class="form-group">
                            <label id="NombreValidacion" class="text-danger">Campo Requerido</label>
                            <input type="text"  id="Nombre" class="form-control my-input"  placeholder="Nombre">
                        </div>
                        <div class="form-group">
                            <label id="APaternoValidacion" class="text-danger">Campo Requerido</label>
                            <input type="text"  id="APaterno" class="form-control my-input"  placeholder="Apellido Paterno">
                        </div>
                        <div class="form-group">
                            <label id="AMaternoValidacion" class="text-danger">Campo Requerido</label>
                            <input type="text"  id="AMaterno" class="form-control my-input" placeholder="Apellido Materno">
                        </div>
                        <div class="text-center ">
                            <button type="button" class="btn btn-warning" id="btnAdd" onclick="return Add();">Confirmar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>



    <div class="text-center">
        <h4>Pedido</h4>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr class="warning">
                <th class="text-center">
                    Nombre
                </th>
                <th class="text-center">
                    Precio
                </th>
                <th class="text-center">
                    Cantidad
                </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>

</div>
<script src="~/Scripts/TrupperControl.js"></script>